{
  "name": "MetaCopy",
  "version": "1.2",
  "manifest_version": 2,
  "description": "Easily copy meta tags with one click",
  "homepage_url": "https://github.com/zackboe/chromemeta",
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "MetaCopy",
    "default_popup": "src/browser_action.html"
  },
  "permissions": [
    "clipboardWrite",
    "activeTab",
    "tabs",
    "http://*/*"
    ],
  "web_accessible_resources": ["src/inject.js"] ,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}